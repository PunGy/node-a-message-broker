{
    "name": "node-a-message-broker",
    "version": "1.0.0",
    "description": "Simple IPC message broker written on nodejs",
    "main": "index.js",
    "author": "Maxim Yakovlev <max.yakovlev555@gmail.com>",
    "license": "MIT",
    "private": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/PunGy/mockaroni.git"
    },
    "keywords": [
        "message-broker",
        "IPC"
    ],
    "files": [
        "dist/**/*",
        "package.json",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:dev": "jest --watchAll",
        "lint": "eslint \"**/*.{js,ts}\"",
        "type-check": "tsc --project tsconfig.production.json --noEmit",
        "build": "tsc --project tsconfig.production.json",
        "postinstall": "husky install",
        "prepublishOnly": "pinst --disable",
        "postpublish": "pinst --enable",

        "build:example": "tsc --project examples/tsconfig.json",
        "build:example:watch": "tsc --watch --project examples/tsconfig.json"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "@types/jest": "^26.0.23",
        "@types/node": "^15.0.2",
        "@types/node-ipc": "^9.1.3",
        "@typescript-eslint/eslint-plugin": "^4.22.1",
        "@typescript-eslint/parser": "^4.22.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.25.0",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "pinst": "^2.1.6",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.5",
        "typescript": "^4.2.4"
    },
    "engines": {
        "node": ">= 8.0.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "dependencies": {
        "node-ipc": "^9.1.4"
    }
}
