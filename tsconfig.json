{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "allowJs": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ],
}
